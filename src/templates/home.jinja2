{% extends "base.jinja2" %}

{% block title %}
    {% trans %}Home{% endtrans%}
{% endblock title %}

{% macro nav(link, icon_name, title) %}
    <a href="{{ link }}" class="homepage-select">
        <div>
            {{ icon(icon_name) }}
            <span>{{ title }}</span>
        </div>
    </a>
{% endmacro %}

{% block content %}
    <main>
        {{ nav('/player', 'music', _('Music player')) }}
        {{ nav('/files', 'folder', _('File manager')) }}
        {{ nav('/playlists', 'playlist-music', _('Playlist manager')) }}
        {{ nav('/account', 'account-cog', _('Account')) }}
        {{ nav('/history', 'history', _('Playback history')) }}
        {{ nav('/playlist_stats', 'chart-line-variant', _('Playback statistics')) }}
        {{ nav('/recent_changes', 'file-edit', _('Recent file changes')) }}
        {{ nav('/never_play', 'cancel', _('Manage track blocklist')) }}
        {{ nav('/radio', 'radio', _('Radio')) }}
    </main>
{% endblock content %}
