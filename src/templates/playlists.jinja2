{% extends "base.jinja2" %}

{% block title %}
    {% trans %}Playlist manager{% endtrans %}
{% endblock title %}

{% block content %}
    <main>
        <a href="/">{% trans %}Back to home{% endtrans %}</a>
        <h1>{% trans %}Playlist manager{% endtrans %}</h1>
        <h2>{% trans %}Your playlists{% endtrans %}</h2>
        <table>
            <thead>
                <tr>
                    <th>Path</th>
                    <th>Write access</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for playlist, write in user_playlists %}
                    <tr>
                        <td>{{ playlist }}</td>
                        <td>{% if write %}
                                {% trans %}Yes{% endtrans %}
                            {% else %}
                                {% trans%}No{% endtrans %}
                            {% endif %}
                        </td>
                        <td>
                            <form action="/playlists_remove" method="POST">
                                <input type="hidden" name="playlist" value="{{ playlist }}">
                                <input type="hidden" name="csrf" value="{{ csrf_token }}">
                                <input type="submit" value="{% trans %}Remove{% endtrans %}">
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <h2>{% trans %}Other playlists{% endtrans %}</h2>
        <p>{% trans %}To create a new playlist, use the <a href="/files">file manager</a>{% endtrans %}.</p>
        <table>
            <thead>
                <tr>
                    <th>Path</th>
                    <th>Track count</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for playlist in other_playlists %}
                    <tr>
                        <td>{{ playlist.relpath }}</td>
                        <td>{{ playlist.track_count }}</td>
                        <td>
                            <form action="/playlists_add" method="POST">
                                <input type="hidden" name="playlist" value="{{ playlist.relpath }}">
                                <input type="hidden" name="csrf" value="{{ csrf_token }}">
                                <input type="submit" value="{% trans %}Add to my playlists{% endtrans %}">
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </main>
{% endblock content %}
