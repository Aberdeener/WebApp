{% extends "base.jinja2" %}

{% block title %}
    {% trans %}Share playlist{% endtrans %}
{% endblock title %}

{% block content %}
    <main>
        <h1>{% trans %}Share playlist{% endtrans %}</h1>

        <p>{% trans %}Give someone else write access to a playlist.{% endtrans %}</p>
        <br>

        <form method="POST">
            <input type="hidden" name="csrf" value="{{ csrf }}">
            <table>
                <tbody>
                    <tr>
                        <td>
                            {% trans%}Playlist{% endtrans %}
                        </td>
                        <td>
                            <input type="text" name="playlist" value="{{ playlist }}" readonly>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            {% trans %}User{% endtrans %}
                        </td>
                        <td>
                            <select name="username">
                                {% for username in usernames %}
                                    <option value="{{ username }}">{{ username }}</option>
                                {% endfor %}
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <input type="submit" value="{% trans %}Share{% endtrans %}">
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
    </main>
{% endblock content %}
