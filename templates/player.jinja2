<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Super fancy music player 2.0</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>

    <div id="bg-image-1" class="bg-image background-cover"></div>
    <div id="bg-image-2" class="bg-image background-cover fade-image-top"></div>

    <div id="left-sidebar" class="sidebar">

        <div>

            <div class="controls box">

                <h3>Raphson</h3>

                <span id="main-checkboxes">
                    <input type="checkbox" id="enable-CB" name="cb" checked>
                    <label for="cb">CB<sup>1</sup></label>
                    <input type="checkbox" id="enable-DK" name="dk" checked>
                    <label for="dk">DK<sup>2</sup></label>
                    <input type="checkbox" id="enable-JK" name="jk" checked>
                    <label for="jk">JK<sup>3</sup></label>
                </span>

                <br>

                <h3>Gasten</h3>

                {% if guests %}
                    <span id="guest-checkboxes">
                        {% for guest in guests %}
                            <input type="checkbox" id="enable-{{guest}}" name="Guest-{{guest}}">
                            <label for="enable-{{guest}}">{{guest}}<sup>{{loop.index + 3}}</label>
                        {% endfor %}
                    </span>
                {% else %}
                    <p>Er zijn geen mappen voor gasten</p>
                {% endif %}

                <br>

            </div>

            <div class="controls box">

                <h3>Muziek</h3>

                <p>
                    <span id="current-track">-</span>
                </p>
                <p class="secondary">
                    Vorige: <span id="previous-track">-</span>
                </p>

                <div class="outer-bar">
                    <div id="progress-bar"></div>
                </div>

                <button id="pp-button" class="icon-button">&#x23EF;</button>
                {# <sup>p</sup> #}
                <button id="skip-button" class="icon-button">&#x23ED;</button>
                {# <sup>&#x2192;</sup> #}
                <span id="progress-time"></span>

            </div>

            <div class="controls box">
                <h3>Wachtrij</h3>
                <div id="queue"></div>
            </div>

        </div>

    </div>

    <div id="right-sidebar" class="sidebar">
        <div class="album-covers">
            <div id="album-cover-1" class="background-cover box"></div>
            <div id="album-cover-2" class="background-cover box fade-image-top"></div>
        </div>
    </div>

    <div id="audio"></div>

    <script src="/script.js"></script>

</body>
</html>
